<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="demo.webmyne.com.employeemanagementsystem">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ems"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ems"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity
            android:name=".splash.SplashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Employee.SignUpActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Employee.LoginActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Employee.EmployeeDrawerActivity"
            android:label="@string/title_activity_employee_drawer"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name=".Employee.UpdateActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".Employee.AddActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>